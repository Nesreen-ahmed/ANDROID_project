<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="244dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ain_shams" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="309dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="جامعة عين شمس كلية العلوم  "
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/science" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/complain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/color"
                android:text="الشكاوي و الاقتراحات" />

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/adver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/color"
                android:text="الاعلانات" />

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/color"
                android:text="الاحداث" />

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/color"
                android:text="الاخبار" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/gpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="27dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:width="100dp"
                android:height="60dp"
                android:background="@drawable/color"
                android:text="Gpa"
                android:textAllCaps="false"
                android:onClick="gpa"/>

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:width="120dp"
                android:height="60dp"
                android:background="@drawable/color"
                android:text="facebook"
                android:textAllCaps="false"/>


            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/b"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:width="50dp"
                android:height="60dp"
                android:background="@drawable/color"
                android:text="لافتات سريعة للاطلاب"
                android:textAllCaps="false" />
        </LinearLayout>

        <WebView
            android:id="@+id/webviwe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>